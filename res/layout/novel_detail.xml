<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mingle.widget.LoadingView
        android:id="@+id/loadView"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <ScrollView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="@dimen/thumb_detail_width"
                    android:layout_height="@dimen/thumb_detail_height"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/default_cover" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/name"  
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无限恐怖" />

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/author" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/read"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bookinfo_redbutton_selector"
                    android:text="立即阅读" />

                <Button
                    android:id="@+id/addtoshelft"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bookinfo_button_selector"
                    android:text="加入书架" />

                <Button
                    android:id="@+id/download"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bookinfo_button_selector"
                    android:text="全本缓存" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/chapters"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <TextView
                    android:id="@+id/id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目录 最近更新" />

                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/last_chapter"
                    style="@style/novelItemTextStyle"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/update_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/game_right_arrow"
                    android:text="第1张 很恶化" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作品简介" />

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>