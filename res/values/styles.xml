<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
       
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
         <item name="android:fastScrollThumbDrawable">@drawable/scroll_thumb</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>  
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>
    
    
    <style name="novelNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/novel_name_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="novelItemTextStyle">
        <item name="android:textSize">@dimen/novel_item_info_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    
    <style name="toggleButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
        <item name="android:background">@drawable/bkshelf_addlanch_selector</item>
    </style>
    
     <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
     <style name="source_select__summary_style">
         <item name="android:paddingLeft">10dp</item>
         <item name="android:background">#F1F1F1</item>
         <item name="android:textSize">@dimen/source_summary_size</item>
     </style>
</resources>
